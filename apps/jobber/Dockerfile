# Build the docker image with `npx nx docker-build jobber`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t jobber`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system jobber && \
          adduser --system -G jobber jobber

COPY dist/apps/jobber jobber/
RUN chown -R jobber:jobber .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix jobber --omit=dev -f install

CMD [ "node", "jobber" ]
